<div id="addRestDataSourceModdalWindow" class="modal hide " aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Add DataSource</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <fieldset class="well the-fieldset">
                <div class="control-group">
                    <label class="control-label">Input format</label>
                    <div class="controls">
                        <select class="input-medium focused">
                            <option>JSON</option>
                        </select>
                    </div>
                </div>
                <table>
                    <thead>
                        <tr>
                            <td>Field name</td>
                            <td colspan="2">Field type</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input type="text" class="input-small" value="Key" />
                            </td>
                            <td>
                                <select class="input-medium focused">
                                    <option>Int32</option>
                                    <option selected>String</option>
                                    <option>DateTime</option>
                                    <option>Bool</option>
                                </select>
                            </td>
                            <td>
                                <button>Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="text" class="input-small" value="Message" />
                            </td>
                            <td>
                                <select class="input-medium focused">
                                    <option>Int32</option>
                                    <option selected>String</option>
                                    <option>DateTime</option>
                                    <option>Bool</option>
                                </select>
                            </td>
                            <td>
                                <button>Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button>Add field</button>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Close</button>
        <button class="btn btn-primary">Add Datasource</button>
    </div>
</div>
